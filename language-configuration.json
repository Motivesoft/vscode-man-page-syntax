{
    "comments": {
        // symbol used for single line comment
        "lineComment": ".\\\"",
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        //["\"", "\""], Remove this as it interferes with the .\" line comment
        ["'", "'"],
        [".EX","\n.EE"],
        [".MT","\n.ME"],
        [".RS","\n.RE"],
        [".TS","\n.TE"],
        [".UR","\n.UE"],
        [".ad l",".ad"],    // No newline here as the user will want to enter more stuff on the first line
        [".in ",".in"],     // No newline here as the user will want to enter more stuff on the first line
        [".nh","\n.hy"],
        [".nf","\n.fi"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}